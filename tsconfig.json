{
  "compilerOptions": {
      "module": "commonjs",
      "lib": ["esnext", "dom"],
      "target": "esnext",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "outDir": "dist",
      "baseUrl": "src",
      "typeRoots": [
        "node_modules/@types"
    ]
  },
  "exclude": ["node_modules"],
  "include": [
      "src/**/*.ts"
  ]
}
